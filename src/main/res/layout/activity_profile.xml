<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header with Profile Title and Edit Icon -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/profileText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Edit Profile"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/editProfileIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="Edit Profile"
            android:padding="4dp"
            android:src="@drawable/ic_edit_profile" />

        <Button
            android:id="@+id/signOutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:backgroundTint="#FF4500"
            android:text="Sign Out"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </RelativeLayout>

    <!-- Profile Picture Section -->
    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:src="@drawable/topleft" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="16dp"
        android:text="Change Picture"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />

    <!-- Profile Information Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <!-- Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="309dp"
                android:layout_height="wrap_content"

                android:text="First Name"
                android:textColor="#333333"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profileFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John"
                android:textColor="#666666" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="315dp"
                android:layout_height="wrap_content"

                android:text="Last Name"
                android:textColor="#333333"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profileLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doe"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="221dp"
                android:layout_height="wrap_content"

                android:text="Email"
                android:textColor="#333333"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profileEmail"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:text="example@example.com"
                android:textColor="#666666" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="303dp"
                android:layout_height="wrap_content"

                android:text="Gender"
                android:textColor="#333333"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/genderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="male"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- Age -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="309dp"
                android:layout_height="wrap_content"

                android:text="Age"
                android:textColor="#333333"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/profileAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="25"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- Height -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="298dp"
                android:layout_height="wrap_content"

                android:text="Height"
                android:textColor="#333333"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/profileHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="180"
                android:textColor="#666666" />
            <TextView
                android:id="@+id/heightUnit"
                android:text="  cm"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <!-- Weight -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:textColor="#333333"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/profileWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="70"
                android:textColor="#666666" />
            <TextView
                android:id="@+id/weightUnit"
                android:text="  kg"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="296dp"
                android:layout_height="wrap_content"
                android:text="Target Weight"
                android:textColor="#333333"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/profileTargetWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="70"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/targetweightUnit"
                android:text="  kg"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:text="Target Period"
                android:textColor="#333333"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/profileTargetPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="60"
                android:textColor="#666666" />
            <TextView
                android:id="@+id/profileTargetPeriodUnit"
                android:text="  days"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <!-- Measurement Preference -->
        <LinearLayout
            android:id="@+id/measurementPreferenceContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/currentPreferenceText"
                android:layout_width="246dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:text="Weight Measurement Preference:"
                android:textColor="#333333"
                android:textStyle="bold"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/profileMeasurementPreference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/measurement_preferences" />
        </LinearLayout>

    </LinearLayout>

    <!-- Save Button at the Bottom -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/black"
        android:paddingVertical="12dp"
        android:text="Save"
        android:textColor="@android:color/white"
        android:textSize="16sp" />


</LinearLayout>

